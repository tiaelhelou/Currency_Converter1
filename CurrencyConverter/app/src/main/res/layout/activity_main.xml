<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="convert"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="211dp"
        android:layout_height="72dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="212dp"
        android:onClick="convert"
        android:text="Convert"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <EditText
        android:id="@+id/lbp"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="142dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usd" />

    <EditText
        android:id="@+id/usd"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/lbp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="79dp"
        android:layout_height="37dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="12dp"
        android:text="  LBP ="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/lbp"
        app:layout_constraintEnd_toStartOf="@+id/lbp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="79dp"
        android:layout_height="37dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="12dp"
        android:text="  USD ="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/usd"
        app:layout_constraintEnd_toStartOf="@+id/usd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/usd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/usd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/images" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="46dp"
        android:layout_height="52dp"
        android:layout_marginStart="349dp"
        android:layout_marginTop="99dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/lbp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.92"
        app:srcCompat="@drawable/lltall_400x400" />

    <ImageView
        android:id="@+id/convert_icon"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="254dp"
        android:adjustViewBounds="false"
        android:onClick="convert"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/lbp"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/converter_icon"
        tools:ignore="SpeakableTextPresentCheck"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>